# ===== CONFIGURACIÓN DE BASE DE DATOS =====
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=core_platform
DB_SYNCHRONIZE=true

# ===== CONFIGURACIÓN DE JWT =====
JWT_SECRET=your-super-secret-key-change-in-production-use-something-long-and-random
JWT_ACCESS_EXPIRATION=15m    # Access token: 15 minutos
JWT_REFRESH_EXPIRATION=7d    # Refresh token: 7 días
JWT_RESET_EXPIRATION=1h      # Reset password token: 1 hora

# ===== CONFIGURACIÓN DE SERVIDOR =====
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000

# ===== CONFIGURACIÓN DE EMAIL (Futuro) =====
